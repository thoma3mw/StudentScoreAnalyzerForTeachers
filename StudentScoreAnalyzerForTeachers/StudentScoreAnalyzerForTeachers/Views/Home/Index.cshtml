@model StudentScoreAnalyzerForTeachers.Models.NumberModel

@{
    this.ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>
        Welcome to the Student<br/>Score Analyzer for Teachers!
    </h1>
    <br/>
    <p class="lead">Enter the number of students below and then click "Start."</p>
    @{ this.Html.BeginForm(); }
    <div class="row">
        <div class="col-md-1">
            @(this.Html.EJ()
                  .NumericTextBoxFor(m => m.Number)
                  .Value("1")
                  .Width("70px")
                  .MinValue(1))
        </div>
        <div class="col-md-1">
            @(this.Html.EJ()
                  .Button("startButton")
                  .Text("Start")
                  .Width("55px")
                  .Type(ButtonType.Submit))
        </div>
    </div>
    @{
        this.Html.EndForm();
    }
</div>